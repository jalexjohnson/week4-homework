<style>
  label { width: 100px; vertical-align: middle;}
</style>

<h2>Edit a Place</h2>

<%= form_tag place_url(@place.id), :method => 'patch' do %>
  <p><label>Title:</label> <input type="text" value="<%= @place.title %>" name="title" size="30" maxlength="255" required></p>
  <p><label>Photo URL:</label> <input type="url" value="<%= @place.photo_url %>" name="url" size="80"></p>
  <p><label>Price:</label> <input type="number" name="price" min="0" step="0.01" value="<%= sprintf "%.2f", @place.price/100.0 %>" required></p>
  <p><label>Description:</label></p>
  <textarea name="desc" cols="80" rows="3" maxlength="1000" required><%= @place.desc %></textarea>
  <p><button>Submit</button></p>
<% end %>
